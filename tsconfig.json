{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["src/*"],
    },
    "rootDirs": [
      "src"
    ]
  },
  "include": [
    "src/**/*.ts",
  ]
}
